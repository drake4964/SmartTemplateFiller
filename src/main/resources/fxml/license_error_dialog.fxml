<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/17.0.15"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.smarttemplatefiller.license.LicenseErrorDialog"
      alignment="CENTER"
      spacing="20"
      prefWidth="450"
      prefHeight="280"
      style="-fx-background-color: linear-gradient(to bottom, #2b2b2b, #1a1a1a);">
    
    <padding>
        <Insets top="30" right="40" bottom="30" left="40"/>
    </padding>
    
    <!-- Logo placeholder - will be loaded dynamically -->
    <ImageView fx:id="logoImageView" 
               fitWidth="120" 
               fitHeight="120"
               preserveRatio="true"
               pickOnBounds="true"/>
    
    <!-- Error message label -->
    <Label fx:id="errorMessageLabel" 
           wrapText="true"
           textAlignment="CENTER"
           maxWidth="380"
           style="-fx-text-fill: #e0e0e0; -fx-font-size: 14px; -fx-font-weight: normal;"/>
    
    <!-- OK Button -->
    <HBox alignment="CENTER">
        <Button fx:id="okButton" 
                text="OK"
                prefWidth="120"
                prefHeight="35"
                onAction="#handleOkButtonClick"
                style="-fx-background-color: #3a3a3a; -fx-text-fill: #ffffff; -fx-font-size: 13px; -fx-background-radius: 5px; -fx-border-color: #555555; -fx-border-radius: 5px; -fx-cursor: hand;"/>
    </HBox>
    
</VBox>
