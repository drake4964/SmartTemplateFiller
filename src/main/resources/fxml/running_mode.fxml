<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.smarttemplatefiller.RunningModeController"
            prefWidth="750" prefHeight="650">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>
    
    <center>
        <VBox spacing="15">
            
            <!-- Section 1: Configuration -->
            <TitledPane text="Configuration" collapsible="false">
                <VBox spacing="10">
                    <padding>
                        <Insets top="10" right="10" bottom="10" left="10"/>
                    </padding>
                    
                    <!-- Mapping File -->
                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <Label text="Mapping File:" prefWidth="100" style="-fx-font-weight: bold;"/>
                        <TextField fx:id="mappingFileField" HBox.hgrow="ALWAYS" editable="false" 
                                   promptText="Select mapping JSON file..."/>
                        <Button text="Browse..." onAction="#handleBrowseMapping"/>
                    </HBox>
                    
                    <!-- Output Folder -->
                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <Label text="Output Folder:" prefWidth="100" style="-fx-font-weight: bold;"/>
                        <TextField fx:id="outputFolderField" HBox.hgrow="ALWAYS" editable="false"
                                   promptText="Select output folder..."/>
                        <Button text="Browse..." onAction="#handleBrowseOutputFolder"/>
                    </HBox>
                </VBox>
            </TitledPane>
            
            <!-- Section 2: Watch Folders -->
            <TitledPane text="Watch Folders" collapsible="false" VBox.vgrow="SOMETIMES">
                <VBox spacing="10">
                    <padding>
                        <Insets top="10" right="10" bottom="10" left="10"/>
                    </padding>
                    
                    <!-- Watch Folders Container (dynamic rows) -->
                    <ScrollPane fitToWidth="true" prefHeight="120" style="-fx-background-color: white;">
                        <VBox fx:id="watchFoldersContainer" spacing="5">
                            <padding>
                                <Insets top="5" right="5" bottom="5" left="5"/>
                            </padding>
                            <!-- Watch folder rows will be added here dynamically -->
                            <Label text="No watch folders added yet. Click 'Add Watch Folder' to begin." 
                                   style="-fx-text-fill: #999; -fx-font-style: italic;"/>
                        </VBox>
                    </ScrollPane>
                    
                    <!-- Add Watch Folder Button -->
                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <Button fx:id="addWatchFolderButton" text="+ Add Watch Folder" 
                                onAction="#handleAddWatchFolder" disable="true"
                                style="-fx-background-color: #2196F3; -fx-text-fill: white;"/>
                        <Label text="(Load a mapping file first)" style="-fx-text-fill: #999; -fx-font-size: 10px;"/>
                    </HBox>
                </VBox>
            </TitledPane>
            
            <!-- Section 3: Status and Activity Log -->
            <TitledPane text="Status and Activity Log" collapsible="false" VBox.vgrow="ALWAYS">
                <VBox spacing="5">
                    <padding>
                        <Insets top="5" right="5" bottom="5" left="5"/>
                    </padding>
                    
                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <Label fx:id="statusLabel" text="Not watching" 
                               style="-fx-font-weight: bold; -fx-text-fill: #666666;"/>
                    </HBox>
                    
                    <Label text="Activity Log:" style="-fx-font-weight: bold;"/>
                    <TextArea fx:id="activityLogArea" VBox.vgrow="ALWAYS" 
                              editable="false" wrapText="true"
                              style="-fx-font-family: 'Consolas', monospace; -fx-font-size: 11px;"/>
                </VBox>
            </TitledPane>
            
        </VBox>
    </center>
    
    <bottom>
        <HBox spacing="10" alignment="CENTER" style="-fx-padding: 10 0 0 0;">
            <Button fx:id="startButton" text="Start Watching" onAction="#handleStart" prefWidth="120"
                    style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold;"/>
            <Button fx:id="stopButton" text="Stop" onAction="#handleStop" prefWidth="100" disable="true"
                    style="-fx-background-color: #f44336; -fx-text-fill: white;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Button text="Open Output Folder" onAction="#handleOpenOutputFolder" prefWidth="140"/>
            <Button text="Close" onAction="#handleClose" prefWidth="80"/>
        </HBox>
    </bottom>
    
</BorderPane>
